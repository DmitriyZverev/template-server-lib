{
  "transform": {
    "^.+\\.[tj]s$": [
      "ts-jest",
      {
        "tsconfig": "test/tsconfig.json",
        "useESM": true
      }
    ]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "collectCoverageFrom": ["src/**/*.ts"],
  "coverageDirectory": "<rootDir>/.coverage/",
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
